# Next.js App Configuration
# URL where your application is hosted (used by Hono client)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
# PostgreSQL database connection URL for Drizzle ORM
POSTGRES_URL=postgresql://username:password@localhost:5432/fionance

# Better Auth Configuration
# Secret key for session encryption
BETTER_AUTH_SECRET=your_random_secret_key_here

# OAuth Providers (optional)
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Optional: Vercel Postgres (automatically provided in Vercel deployment)
# POSTGRES_URL_NON_POOLING=postgresql://username:password@localhost:5432/fionance